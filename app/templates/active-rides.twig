{% extends "layout.twig" %}

{% block content %}
<div class="max-w-lg mx-auto bg-white px-4 py-4 rounded-lg shadow-md mt-6 w-full px-2" w-full px-2>
    <h2 class="text-xl font-semibold text-center mb-4">Active Ride Requests</h2>

    {% if activeRides|length > 0 %}
        <ul class="space-y-4">
            {% for ride in activeRides %}
                <li class="p-4 border rounded-lg shadow flex justify-between items-center">
                    <div>
                        <p class="font-semibold">{{ ride.pickup }} â†’ {{ ride.dropoff }}</p>
                        <p class="text-sm text-gray-500">{{ ride.date }}</p>
                    </div>
                    <span class="px-2 py-1 rounded text-white {% if ride.status == 'Accepted' %}bg-blue-600{% else %}bg-yellow-500{% endif %}">
                        {{ ride.status }}
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-center text-gray-600">No active rides at the moment.</p>
    {% endif %}
</div>
{% endblock %}
